@page "/AddAuthor"
@using AuthorBlazor.Models
@using AuthorBlazor.Service
@inject AuthorService AuthorService


<h3>AddAuthor</h3>
<EditForm Model="@Author" OnValidSubmit="@AddAuthorAsync">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="form-group">
        First Name: <InputText @bind-Value="Author.FirstName"/>
    </div>
    <div class="form-group">
        Last Name: <InputText @bind-Value="Author.LastName"/>
    </div>
    <p class="actions">
        <button class="btn btn-outline-dark" type="submit">Create</button>
    </p>
</EditForm>

@code {
    private Author Author = new();

    public async Task AddAuthorAsync()
    {
        AuthorService.AddAdultAsync(Author);
    }
}